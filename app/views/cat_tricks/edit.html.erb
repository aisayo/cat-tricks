<h3><%= @cat.name %>'s Progress Rating for <%= @trick.name %></h3>

<p>Rate progress on a scale of 1 (beginner) to 5 (expert).</p>

<%= form_for @cat_trick do |f| %>

<div class="field">
  <%= f.label :rating, 'Rating:' %>
  <%= f.number_field :rating, min: 1, max: 5 %>
</div>

<div class="actions">
  <%= f.submit "Update cat's progress" %>
</div>


<% end %>
